<div class="container px-5 px-sm-0 p-3">
  <div class="row">
    <div class="col-md-3">

      <h1>New Book</h1>

      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>

    </div>
  </div>
</div>
