<h1>User info</h1>

<% if @user.imageattached? %>
  <%= image_tag @user.image, size: "100x100" %>
<% else %>
  <%= image_tag 'no_image', size: "100x100" %>
<% end %>

<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>

<%= link_to ", edit_user_path %>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>



<body>
  <h2>Books</h2>
  
  <table>
    <thread>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user.user_id) do %>
              <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %></td>
            <td><%=link_to show_user_path do %>
              <%= book.title %>
              <% end %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </thread>
  </table>
  
  
</body>